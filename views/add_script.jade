extends layout


block CONTENT
  h1 Create a  New Script
  form(role="form",action='/add_script',method='POST')
    div.form-group
      label(for="name_script") Name of script
      input(name='name_script', type="text", class="form-control" ,id="ip", placeholder="Enter script name" , value="#{name}")
    div.row
      div.col-md-6
        h3 Variable env
        textarea(name="var_env",style="width:100%;height:500px")= var_env
      div.col-md-6
        h3 Script BASH
        textarea(name="script_bash",style="width:100%;height:500px")= script_bash
    div.panel.panel-success(style="margin-top:20px")
      div(class="panel-heading") RUN
      div.panel-body
        div.input-group
          input( type="text" ,class="form-control",placeholder="puts arguments")
          span(class="input-group-btn")
            button(class="btn btn-default", type="button") Go!
    div.row
      div.col-md-6
        button(type="submit" ,style="margin-top: 20px",class="btn btn-lg btn-block btn-warning") check
      div.col-md-6
        button(type="submit" ,style="margin-top: 20px",class="btn btn-lg btn-block btn-success") Save
